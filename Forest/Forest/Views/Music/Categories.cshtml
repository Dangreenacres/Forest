@model IEnumerable<Forest.Data.Music_Category>

@{
    ViewBag.Title = "Categories";
}

<h2>Categories</h2>

<p>
    @Html.ActionLink("Create New", "AddMusicCategory", new { controller = "MusicAdmin" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Genre)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink(item.Genre, "Recordings", new { genre = item.Id })
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Id }) |
            @Html.ActionLink("Add Music", "AddMusicRecording", new { genre = item.Genre, controller = "MusicAdmin" })
        </td>
    </tr>
}

</table>
