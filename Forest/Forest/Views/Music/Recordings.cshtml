@model IEnumerable<Forest.Data.BEANS.MusicBEAN>

@{
    ViewBag.Title = "Recordings";
}

<h2>Recordings</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Artist)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Genre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Image_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Num_Tracks)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Stock_Count)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Released)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Artist)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Genre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Image_Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Num_Tracks)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Stock_Count)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Released)
        </td>
        <td>

            <input type="button" title="Edit" value="Edit"  class="btn btn-warning" onclick="location.href='@Url.Action("EditMusicRecording", new { id = item.Id, Controller = "MusicAdmin" })'" />
            <input type="button" title="Details" value="Details"  class="btn btn-info" onclick="location.href='@Url.Action("Recording", new { id = item.Id})'"/>
            <input type="button" title="Delete" value="Delete"  class="btn btn-danger" onclick="location.href='@Url.Action("DeleteMusicRecording", new { id = item.Id})'"/>
        </td>
    </tr>
}

</table>
